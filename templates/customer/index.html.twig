{% extends 'base.html.twig' %}

{% block title %}Список клиентов{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Список клиентов</h1>
        <a href="{{ path('app_customer_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Добавить клиента
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Email</th>
                    <th>Компания</th>
                    <th>Должность</th>
                    <th>Телефоны</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for customer in pagination %}
                <tr>
                    <td>{{ customer.id }}</td>
                    <td>{{ customer.firstName }}</td>
                    <td>{{ customer.lastName }}</td>
                    <td>{{ customer.email }}</td>
                    <td>{{ customer.companyName }}</td>
                    <td>{{ customer.position }}</td>
                    <td>
                        {% if customer.phone1 %}{{ customer.phone1 }}<br>{% endif %}
                        {% if customer.phone2 %}{{ customer.phone2 }}<br>{% endif %}
                        {% if customer.phone3 %}{{ customer.phone3 }}{% endif %}
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" 
                               class="btn btn-sm btn-warning">
                                Редактировать
                            </a>
                            <form method="post" action="{{ path('app_customer_delete', {'id': customer.id}) }}" 
                                  onsubmit="return confirm('Вы уверены, что хотите удалить этого клиента?');" 
                                  style="display: inline-block">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                                <button class="btn btn-sm btn-danger">Удалить</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Записей не найдено</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {# Пагинация #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}