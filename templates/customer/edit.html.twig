{% extends 'base.html.twig' %}

{% block title %}Редактирование клиента{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Редактирование клиента {{ customer.fullName }}</h1>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                <div class="row mb-3">
                    <div class="col-md-4">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        {{ form_row(form.gender) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.companyName) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.position) }}
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        {{ form_row(form.phoneNumbers.phone1) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.phoneNumbers.phone2) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.phoneNumbers.phone3) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_customer_index') }}" class="btn btn-secondary">
                        Назад к списку
                    </a>
                    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}